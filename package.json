{
    "name": "open-ai-summaries",
    "version": "1.0.0",
    "description": "",
    "engines": {
        "node": ">=18"
    },
    "main": "index.js",
    "scripts": {
        "lint": "pnpm run '/^lint:.*/'",
        "lint:ts": "npx eslint --ext '**/*.{ts,tsx}'",
        "lint:chrome": "tsc --project apps/chrome/tsconfig.json",
        "lint:backend": "tsc --project apps/backend/tsconfig.json",
        "format": "prettier -w . -u",
        "format:check": "prettier . -c",
        "test": "pnpm run '/^test:*/'",
        "test:backend": "pnpm run --filter {apps/backend} test",
        "test:chrome": "pnpm run --filter {apps/frontend} test",
        "build": "pnpm run '/^build:.*/'",
        "build:chrome": "pnpm run --filter {apps/chrome} build",
        "build:backend": "pnpm run --filter {apps/backend} build",
        "start": "pnpm run '/^start:*/'",
        "start:backend": "pnpm run --filter {apps/backend} start:dev",
        "start:chrome": "pnpm run --filter {apps/chrome} dev",
        "prepare": "husky install"
    },
    "keywords": [
        "nestjs",
        "react",
        "vite",
        "monorepo",
        "mongodb",
        "mongoose",
        "typescript",
        "dependabot",
        "pnpm",
        "chrome-extension",
        "open-ai"
    ],
    "author": "kasir-barati",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/config-conventional": "^17.4.4",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "commitlint": "^17.5.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "prettier": "^2.8.7",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kasir-barati/open-ai-summaries.git"
    },
    "bugs": {
        "url": "https://github.com/kasir-barati/open-ai-summaries/issues"
    },
    "homepage": "https://github.com/kasir-barati/open-ai-summaries#readme"
}
