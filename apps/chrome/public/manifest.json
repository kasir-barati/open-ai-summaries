{
    "name": "Open AI Summaries Extension",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "matches": ["<all_urls>"],
        "service_worker": "background.js"
    },
    "permissions": ["contextMenus", "tabs", "scripting", "activeTab"]
}
